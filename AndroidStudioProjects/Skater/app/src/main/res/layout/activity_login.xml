<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="isbhv2.hi.notandi.skater.controller.LoginActivity">

    <EditText
        android:id="@+id/loginUsername"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Notendanafn"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/loginPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:hint="Notendanafn" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:hint="Lykilorð"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginUsername"
        tools:hint="Lykilorð" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:text="Innskrá"
        android:textColorLink="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/registerLink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPassword" />

    <TextView
        android:id="@+id/registerLink"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:autoText="false"
        android:singleLine="false"
        android:text="Nýskráning"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textColorLink="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textSize="18sp" />

</android.support.constraint.ConstraintLayout>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="700dp"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hnitText"
        tools:context="isbhv2.hi.notandi.skater.MapsActivity" />

    <EditText
        android:id="@+id/lysingText"
        android:layout_width="wrap_content"
        android:layout_height="350px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nafnText"
        android:ems="10"
        android:hint="Lýsing"
        android:inputType="textMultiLine"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray" />

    <CheckBox
        android:id="@+id/cbTroppur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lysingText"
        android:layout_marginEnd="38dp"
        android:text="Tröppur"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/cbHandrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lysingText"
        android:layout_marginStart="42dp"
        android:text="Handrið"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/bSenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cbTroppur"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:text="Senda" />

    <CheckBox
        android:id="@+id/cbRampur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cbInnandyra"
        android:layout_marginEnd="13dp"
        android:text="Rampur"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/cbVetur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lysingText"
        android:layout_centerHorizontal="true"
        android:text="Vetrarvænt"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/nafnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Nafn"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray" />

    <CheckBox
        android:id="@+id/cbInnandyra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/cbDropp"
        android:layout_marginStart="95dp"
        android:text="Innandyra"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/cbDropp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="267dp"
        android:text="Drop"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/cbUpplyst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cbRampur"
        android:layout_marginEnd="101dp"
        android:text="Upplýst"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/hnitText"
        android:layout_width="270dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bMynd"
        android:layout_marginTop="69dp"
        android:text="Hér geturðu merkt staðinn inn á korti:"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bMynd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bSenda"
        android:text="Taka mynd" />

    <ImageView
        android:id="@+id/mImageView"
        android:layout_width="158dp"
        android:layout_height="124dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="268dp"
        android:layout_toStartOf="@+id/cbTroppur"
        app:srcCompat="@drawable/common_full_open_on_phone" />

</RelativeLayout>
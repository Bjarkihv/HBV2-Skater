<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="1200dp"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="isbhv2.hi.notandi.skater.InfoMapsActivity" />

    <Button
        android:id="@+id/bCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bReviews"
        android:layout_centerHorizontal="true"
        android:text="Tékka inn" />

    <TextView
        android:id="@+id/spotName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/spotDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spotName"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/spotCats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="409dp"
        android:text="TextView"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/checkInLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bCheckIn"
        android:layout_centerHorizontal="true"
        android:text="Þú ert nú þegar skráð/ur inn á stað."
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/bReviews"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bWriteRev"
        android:text="Skoða umsagnir" />

    <Button
        android:id="@+id/bWriteRev"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="442dp"
        android:text="Skrifa umsögn" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="isbhv2.hi.notandi.skater.controller.FindSpotActivity">

    <Button
        android:id="@+id/bLeita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="210dp"
        android:drawableLeft="@drawable/ic_action_search"
        android:text="LEITA" />

    <CheckBox
        android:id="@+id/cbTroppurS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cbRampurS"
        android:layout_marginEnd="14dp"
        android:text="Tröppur"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/cbHandridS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cbTroppurS"
        android:layout_marginEnd="114dp"
        android:text="Handrið"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/cbRampurS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/cbDroppS"
        android:layout_marginStart="96dp"
        android:text="Rampur"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/cbVeturS"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbInnandyraS"
        android:layout_centerHorizontal="true"
        android:text="Vetrarvænt"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/cbInnandyraS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp"
        android:layout_toEndOf="@+id/button6"
        android:text="Innandyra"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/cbDroppS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="177dp"
        android:text="Drop"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/cbUpplystS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/cbVeturS"
        android:layout_marginStart="27dp"
        android:text="Upplýst"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:drawableLeft="@drawable/ic_action_random"
        android:text="Slembistaður" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Veldu leitarskilyrði hér fyrir neðan. Ef ekkert er valið er öllum skráðum staðsetningum skilað."
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        android:text="Eða láttu forritið velja slembna staðsetningu fyrir þig!"
        android:textColor="#ffffff" />

</RelativeLayout>
